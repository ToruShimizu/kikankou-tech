---
const links = [
	{ href: '/', text: 'ホーム' },
	{ href: '/about/', text: 'このブログについて' },
	{ href: '/policy/', text: 'プライバシーポリシー' },
	{ href: '/contact/', text: '問い合わせ' },
]
const currentPath = Astro.url.pathname
---

<nav class="nav-links hidden">
	<ul class="grid text-center gap-4">
		{
			links.map((link) => (
				<li>
					{currentPath === link.href ? (
						<span>{link.text}</span>
					) : (
						<a href={link.href} class="underline md:hover:no-underline">
							{link.text}
						</a>
					)}
				</li>
			))
		}
	</ul>
</nav>

<style>
	.expanded {
		display: unset;
	}
</style>
